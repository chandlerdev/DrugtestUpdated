@model TransCanada.Models.TpaLabservice

@{
    ViewBag.Title = "UpdateTpaLabService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateTpaLabService</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TPALab_Service_Id, htmlAttributes: new { @class = "control-label col-md-2" })


        @Html.HiddenFor(model => model.TPALab_Id, htmlAttributes: new { @class = "control-label col-md-2" })


        <div class="form-group">
            @Html.LabelFor(model => model.Service_Grp_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Service_Grp_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Service_Grp_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<h2>TpaListSubService</h2>

<p>
    @Html.ActionLink("Create New", "AddSubService",new{id=Model.TPALab_Service_Id})
</p>
<table class="table">

    <tr>
        @*<th>
            Panel Id
        </th>*@

        <th>
            Panel
        </th>
        <th>
            Description
        </th>
        <th>
            Service Charge
        </th>
        <th>
            Billing Charge
        </th>
    </tr>
    @foreach (var item in ViewData["Data"] as List<TransCanada.Models.TpaLabsubservice>)
    {
<tr>
    @*<td>@item.TPALab_SubService_Id</td>*@

    <td>@item.TPAlab_Service_Description</td>
    <td>@item.TPAlab_Service_Ext_Description</td>
    <td>@item.Service_Charges</td>
    <td>@item.Client_Billing_Charges</td>
    <td>@Html.ActionLink("Edit", "UpdateSubService", new { id = item.TPALab_SubService_Id })</td>
    <td>@Html.ActionLink("Delete", "DeleteSubService", new { id = item.TPALab_SubService_Id }, new { onclick = "return confirm('Are you sure you want to delete this ?');" })</td>
</tr>
    }
</table>

<div>
    @Html.ActionLink("Back to List", "TpaLabService", new { id = Model.TPALab_Id })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
