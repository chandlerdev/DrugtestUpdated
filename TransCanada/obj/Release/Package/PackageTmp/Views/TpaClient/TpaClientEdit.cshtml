@model TransCanada.Models.TPAClient

@{
    ViewBag.Title = "TpaClientEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update TPA Client</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      

        <div class="form-group">
            @Html.HiddenFor(model => model.TPAClient_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            
        </div>

       

        <div class="form-group">
            @Html.LabelFor(model => model.TPA_Client, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TPA_Client, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TPA_Client, "", new { @class = "text-danger" })
            </div>
        </div>

       
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "TpaClientList")
</div>
