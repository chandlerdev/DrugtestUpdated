@model IEnumerable<TransCanada.Models.Lab_contact>

@{
    ViewBag.Title = "ContactsList";
}


<h2>@TempData["Lab_Name"]->@TempData["Lab_location"]->Contacts List</h2>
@{
    TempData.Keep("Lab_Name");
    TempData.Keep("Lab_location");
}
<div style="float:right">
    @Html.ActionLink("Back to Location", "Locations", new { id = ViewBag.LabName })
</div>
<p>
    @Html.ActionLink("Create New", "NewContact", new { id = ViewBag.locationid + "/" })
</p>
<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.contact_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.location_id)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.officephone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.contact_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.location_id)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.officephone)
            </td>
            <td>
                @Html.ActionLink("Edit", "ContactDetails", new { id = item.contact_id })
                @Html.ActionLink("Delete", "DeleteContact", new { id = item.contact_id }, new { onclick = "return confirm('Are you sure you want to delete this ?');" })
            </td>
        </tr>
    }

</table>
<br />
<br />
