@model TransCanada.Models.SubServices

@{
    ViewBag.Title = "CreateSubService";
    Layout = null;
}


<div style="float:right">
    @Html.ActionLink("Back to List", "UpdateServiceGroup", new { id = Model.lab_group_id })
</div>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Drug Test -New Service</title>
    @*<title><img src="images/Logo_TransCanada.png" alt="TransCanada" /></title>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-inverse {
            height: 60px;
            background-color: #222;
            border-color: #080808;
        }
    </style>
</head>
<body>
    <br />
    @Html.Raw(MvcBreadCrumbs.BreadCrumb.Display())
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("TransCanada", "Index", "Client", new { area = "" }, new { @class = "navbar-brand" })*@
                @*<img src="/images/Logo_WorkPlace.png" alt="WorkPlace Safety Screenings" />*@



                <img style="display:block;width:80px;height:60px" src="/images/drugtestlogo.png" alt="Drug Test" />
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    @Html.Partial("_MenuPartial")
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (@Session["Account_idPK"] != null)
        {
            <div style="float:right" class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" href="/Dashboard/Index">Home</a>|
                    <a class="nav-item nav-link" href="/ClientLab/ClientLabSP/@Session["Account_idPK"]">Assign Lab&SP</a>|
                    <a class="nav-item nav-link" href="/Location/Locations/@Session["Account_id"]">Locations and Contacts</a>

                </div>
            </div>
        }

        <div style="float:right">
            @Html.ActionLink("Back to List", "UpdateServiceGroup", new { id = Model.PS_Id })
        </div>
        <h2>New Panel</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.PS_Id)

                @*<div class="form-group">
                    @Html.LabelFor(model => model.Lab_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Lab_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Lab_Name, "", new { @class = "text-danger" })
                    </div>
                </div>*@
                <div class="form-group">
                    @*@Html.LabelFor(model => model.Lab_Type, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label class="control-label col-md-2">Panels</label>
                    <div class="col-md-10">
                        @Html.ListBoxFor(model => model.PS_Type, Model.RemainProducts, new { @class = "form-control listbox" })
                        @Html.ValidationMessageFor(model => model.PS_Type, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "UpdateServiceGroup", new { id = Model.PS_Id })
        </div>
    </div>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css"
          rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <link href="https://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>
    @*<script src="~/Scripts/jquery-3.3.1.js"></script>*@
    <script type="text/javascript">

        $(function () {
            $('.listbox').multiselect({
                buttonWidth: '280px',
                includeSelectAllOption: true

            });
        });
    </script>
</body>
</html>
