@model IEnumerable<TransCanada.Models.Lab_contact>

@{
    ViewBag.Title = "LocContactList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact List</h2>

<p>
    @Html.ActionLink("Create New", "CreateLocContact")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.officephone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.officephone)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateLocContact", new { id = item.contact_id }) |
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "DeleteLocContact", new { id = item.contact_id, del_id = item.location_id })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Back to Locations", "Locations")