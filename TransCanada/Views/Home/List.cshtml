@model IEnumerable<TransCanada.Models.UserAccounts_Model>

@{
    ViewBag.Title = "Accounts For User";
}

<h2>Accounts For User</h2>

<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.AccountId_PK)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogoImage)
        </th>
        <th></th>
    </tr>

