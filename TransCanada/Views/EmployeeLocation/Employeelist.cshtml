@model IEnumerable<TransCanada.Models.EmployeeLocation>

@{
    ViewBag.Title = "Employeelist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee list</h2>
<meta name="viewport" content="width=device-width" />

<title>ShowGrid</title>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />


<p>
    @Html.ActionLink("Add Employee", "InsertEmployee")
</p>
<div class="table-responsive">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="Table" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee_Test)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address_1)
                    </th>
