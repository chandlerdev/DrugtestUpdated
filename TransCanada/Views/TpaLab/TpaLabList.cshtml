@model IEnumerable<TransCanada.Models.TpaLab_model>

@{
    ViewBag.Title = "TpaLabList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<h2>Tpa Lab List</h2>

<p>
    @Html.ActionLink("Add Tpa Lab", "CreateTPaLab")
</p>
<table class="table" id="Table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.TPALab_Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.TPALab_Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.TPALab_Id)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.TPALab_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "TpaLabEdit", new { id = item.TPALab_Id }) |
                    @Html.ActionLink("Location", "TLLocationList", new { id = item.TPALab_Id }) |
                    @Html.ActionLink("Panel Group", "TpaLabService", new { id = item.TPALab_Id }) |
                    @Html.ActionLink("Delete", "TpaLabdelete", new { id = item.TPALab_Id }, new { onclick = "return confirm('Are you sure you want to delete this ?');" })
                </td>
            </tr>
        }
    </tbody>

</table>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

        $('#Table').dataTable({
            responsive: true
        });

</script>

